<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/launchButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запустить 4 корутины в одном scope"
        app:icon="@drawable/baseline_rocket_launch_24"
        app:iconGravity="textStart"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Отменить их"
        android:backgroundTint="#F06292"
        app:icon="@drawable/outline_cancel_24"
        app:iconGravity="textStart"
        />

</LinearLayout>